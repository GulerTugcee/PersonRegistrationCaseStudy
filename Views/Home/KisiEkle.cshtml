

<div id="add-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="standard-modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="standard-modalLabel">Kişi Ekleme Sayfası</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addForm" action="/Home/KisiEkle" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group mt-2">
                        <label for="ad">NAME</label>
                        <input class="form-control" name="ad" id="ad" />
                    </div>
                    <div class="form-group mt-2">
                        <label for="soyad">SURNAME</label>
                        <input class="form-control" name="soyad" id="soyad" />
                    </div>
                    <div class="form-group mt-2">
                        <label for="cinsiyet">GENDER</label>
                        <input class="form-control" name="cinsiyet" id="cinsiyet" />
                    </div>
                    <div class="form-group mt-2">
                        <label for="telefon">TELEPHONE</label>
                        <input type="tel" class="form-control" name="telefon" id="telefon" />
                    </div>
                    <div class="form-group mt-2">
                        <label for="email">E-MAIL</label>
                        <input type="email" class="form-control" name="email" id="email" />
                    </div>
                    <div class="form-group mt-2">
                        <label for="file">PICTURE</label>
                        <input type="file" class="form-control" name="file" id="file" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary float-start">SAVE</button>
                    <button type="button" class="btn btn-light float-end" data-bs-dismiss="modal">CLOSE</button>
                </div>
            </form>
        </div>
    </div>
</div>
